<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Ankh-Morpork</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
</head>
<body>
    <div class="navbar navbar-expand navbar-dark bg-dark navbar-fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#" style="margin-left:4%">
                <img src="~/Images/cityIcon.png" alt="" width="40" height="35" class="d-inline-block align-text-top">
                Ankh-Morpork City
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="d-flex">
                @Html.Action("Info", "Game")
                @Html.ActionLink("Inventory", "Inventory", "Game", new { }, new { @class = "compItem btn btn-outline-light" })
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top:10px">
        @RenderBody()
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>

    @RenderSection("scripts", required: false)

    <div id="modDialog" class="modal fade" aria-hidden="true">
        <div id="dialogContent" class="modal-dialog"></div>
    </div>
</body>
</html>

<script type="text/javascript">
    $(function () {
        $.ajaxSetup({ cache: false });
        $(".compItem").click(function (e) {

            e.preventDefault();
            $.get(this.href, function (data) {
                $('#dialogContent').html(data);
                $('#modDialog').modal('show');
            });
        });
    })
</script>
