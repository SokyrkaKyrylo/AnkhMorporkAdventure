@model IEnumerable<AnkhMorporkAdventure.Domain.Models.Item>
@{
    ViewData["Title"] = "Bar";
}

<h2>Welcome to Mended Drum</h2>
<br />
<h4>Do u wanna to buy something?</h4>
<br />
<div class="row">
    <div class="col-8">
        <table class="table table-light">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>@Html.DisplayFor(m => item.Description)</td>
                        <td>@Html.DisplayFor(m => item.Price)</td>
                        <td>
                            @using (Html.BeginForm("Buy", "MendedDrum"))
                            {
                                @Html.Hidden("id", item.Id)
                                <div class="d-inline-flex">
                                    <input type="number" name="quantity" min="1" max="2" class="form-control form-control-sm" />
                                </div>
                                <button type="submit" class="btn btn-outline-secondary btn-sm">Buy</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-4">
        <img src="~/Images/mendedDrum.jpg" class="img-thumbnail float-end" alt="...">
    </div>
</div>
