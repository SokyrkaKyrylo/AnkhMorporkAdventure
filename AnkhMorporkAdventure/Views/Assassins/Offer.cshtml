@model AnkhMorporkAdventure.Models.RewardModel
@{
    ViewBag.Title = "StartConfirming";
}

@using (Html.BeginForm("Confirm", "Assassins"))
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Reward, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.Reward, new { htmlAttributes = new { @class = "form-control", @min = "0" } })
            @Html.ValidationMessageFor(model => model.Reward)
        </div>
    </div>

    <div class="form-group" style="margin-top: 0.5%">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-secondary">Give a Reward</button>
        </div>
    </div>
}
